    cd Hunyuan3D-2GP && \
    pip install -e . && \
    echo "âœ… Hunyuan3D-2GP installed successfully"

# ğŸ§  Update environment variables
ENV PYTHONPATH="/workspace/Hunyuan3D-2GP:/workspace/ThesisProject/3d-webgen/backend:$PYTHONPATH"

